{
  "name": "dynamic-ejs-blog",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node build/server.js",
    "dev": "NODE_ENV=development node nodemon.js",
    "local": "NODE_ENV=local node nodemon.js",
    "watch": "concurrently --kill-others \"npm run local\" \"npm run build:dev:css\"",
    "build": "rm -rf build && npm run build:css && webpack --mode production",
    "build:css": "postcss statics/vendors/global.css -o statics/vendors/app.css",
    "build:dev:css": "postcss statics/vendors/global.css -o statics/vendors/app.css --watch",
    "build:dev": "rm -rf build && npm run build:css && webpack --mode development",
    "build:local": "rm -rf build && npm run build:css && webpack --mode none"
  },
  "author": "Kasra Karami <Kasra.Karami.KK@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "mongodb": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.3.1"
  }
}