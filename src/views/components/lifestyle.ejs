  component: 'lifestyle',
  configuration: {
    image: 'https://images.unsplash.com/photo-1490129375591-2658b3e2ee50?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&amp;ixlib=rb-1.2.1&amp;auto=format&amp;fit=crop&amp;w=2244&amp;q=80',
    title: 'A taste of every lifestyle',
    button: {
      label: 'Read the blog',
      link: '#blog',
    },
    external_links: [
      {
        label: 'Find out more',
        link: '#pages/about-us'
      },
      {
        label: 'Get in touch',
        link: '#contact'
      },
    ]
  },
}
%>

<% var dynamic_id = JSON.stringify(element.dynamic_id) %>
<%# if (data.editable) { %>
<%# } %>

<div class="-mt-24 relative w-full py-12 px-12 bg-yellow-900" style="margin-top: 0px">
  <div class="relative z-10 text-center py-24 md:py-48">
    <h1 id="header" class="text-white text-center text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-12">
      <%= element.configuration.title %>
    </h1>
    <a onclick=`${lifeStyleEmitter(<%= dynamic_id %>)}` href="<%= element.configuration.button.link %>" class="inline-block bg-yellow-800 text-white uppercase text-sm tracking-widest font-heading px-8 py-4"><%= element.configuration.button.label %></a>
  </div>
  <div class="relative z-10 mx-auto max-w-4xl flex justify-between uppercase text-white font-heading tracking-widest text-sm">
    <% element.configuration.external_links.forEach(function (item) { %>
    <a href="<%= item.link %>" class="border-b border-white"><%= item.label %></a>
    <% }); %>
  </div>
  <img src="<%= element.configuration.image %>" class="w-full h-full absolute inset-0 object-cover opacity-70" />
</div>

<!-- Modifier Dialog -->
<div class="dialog" id="<%= `dialog_${element.dynamic_id}` %>">
  <div class="mb-3">
    <label class="block text-gray-700 text-sm font-bold mb-1" for="<%= `title_${element.dynamic_id}` %>">
      Title
    </label>
    <input id="<%= `title_${element.dynamic_id}` %>" value="<%= element.configuration.title %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" placeholder="Title">
  </div>

  <div class="flex">
    <button type="button" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
      <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
      </svg>
      Publish
    </button>

    <button type="button" class="ml-2 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
  </div>
</div>