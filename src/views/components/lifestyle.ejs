<%# 
Sample Object:
{
  component: 'lifestyle',
  configuration: {
    image: 'https://images.unsplash.com/photo-1490129375591-2658b3e2ee50?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&amp;ixlib=rb-1.2.1&amp;auto=format&amp;fit=crop&amp;w=2244&amp;q=80',
    title: 'A taste of every lifestyle',
    button: {
      label: 'Read the blog',
      link: '#blog',
    },
    external_links: [
      {
        label: 'Find out more',
        link: '#pages/about-us'
      },
      {
        label: 'Get in touch',
        link: '#contact'
      },
    ]
  },
}
%>

<% var dynamic_id = JSON.stringify(element.dynamic_id) %>
<%# if (data.editable) { %>
<%# } %>

<div class="-mt-24 relative w-full py-12 px-12 bg-yellow-900" style="margin-top: 0px">
  <div class="relative z-10 text-center py-24 md:py-48">
    <h1 id="header" class="text-white text-center text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-12">
      <%= element.configuration.title %>
    </h1>
    <a onclick=`${lifeStyleEmitter(<%= dynamic_id %>)}` href="<%= element.configuration.button.link %>" class="inline-block bg-yellow-800 text-white uppercase text-sm tracking-widest font-heading px-8 py-4"><%= element.configuration.button.label %></a>
  </div>
  <div class="relative z-10 mx-auto max-w-4xl flex justify-between uppercase text-white font-heading tracking-widest text-sm">
    <% element.configuration.external_links.forEach(function (item) { %>
    <a href="<%= item.link %>" class="border-b border-white"><%= item.label %></a>
    <% }); %>
  </div>
  <img src="<%= element.configuration.image %>" class="w-full h-full absolute inset-0 object-cover opacity-70" />
</div>

<!-- ----------------------------------------------------------------------- -->
<!--                             Modifier Dialog                             -->
<!-- ----------------------------------------------------------------------- -->
<div id="<%= `dialog_${element.dynamic_id}` %>" class="dialog">
  <div class="mb-3">
    <label for="<%= `title_${element.dynamic_id}` %>" class="block text-gray-700 text-sm font-bold mb-1">
      Title
    </label>
    <input id="<%= `title_${element.dynamic_id}` %>" type="text" placeholder="Title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
  </div>

  <!-- ----------------------- START: Call To Actions ------------------------ -->
  <div class="flex">
    <button type="button" onclick=`${publishModifyDialog(<%= dynamic_id %>)}` class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
      <svg class="h-6 w-6 -ml-0.5 mr-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
      </svg>
      Publish
    </button>

    <button type="button" onclick=`${closeModifyDialog(<%= dynamic_id %>)}` class="ml-2 inline-flex w-full items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">
      <svg class="h-6 w-6 -ml-0.5 mr-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.05 4.575a1.575 1.575 0 10-3.15 0v3m3.15-3v-1.5a1.575 1.575 0 013.15 0v1.5m-3.15 0l.075 5.925m3.075.75V4.575m0 0a1.575 1.575 0 013.15 0V15M6.9 7.575a1.575 1.575 0 10-3.15 0v8.175a6.75 6.75 0 006.75 6.75h2.018a5.25 5.25 0 003.712-1.538l1.732-1.732a5.25 5.25 0 001.538-3.712l.003-2.024a.668.668 0 01.198-.471 1.575 1.575 0 10-2.228-2.228 3.818 3.818 0 00-1.12 2.687M6.9 7.575V12m6.27 4.318A4.49 4.49 0 0116.35 15m.002 0h-.002" />
      </svg>
      Cancel
    </button>
  </div>
  <!-- ------------------------ END: Call To Actions ------------------------- -->
</div>